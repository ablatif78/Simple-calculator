<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#026868"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/firstTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="right"
        android:textSize="25sp"

         />
    <TextView
        android:id="@+id/secondTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="right"
        android:textSize="30sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/CEButtonid"
            android:onClick="CEFunction"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="CE"
            android:textSize="35dp"

           />
        <Button
            android:id="@+id/CButtonid"
            android:onClick="clearFunction"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="C"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/percentButtonid"
            android:layout_weight="1"
            android:onClick="percentFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="%"
            android:textSize="35dp"

            />

        <Button
            android:id="@+id/deleteButtonid"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:onClick="deleteFunction"
            android:text="D"
            android:textSize="35dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/sevenButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="7"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/eightButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:text="8"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/nineButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="9"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/divButtonid"
            android:onClick="logicFunction"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="/"
            android:textSize="35dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/fourButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="4"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/fiveButtonid"
            android:layout_weight="1"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="5"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/sixtButtonid"
            android:layout_weight="1"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="6"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/multiButtonid"
            android:layout_weight="1"
            android:onClick="logicFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="*"
            android:textSize="35dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/oneButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="1"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/twoButtonid"
            android:layout_weight="1"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="2"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/threeButtonid"
            android:layout_weight="1"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="3"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/subButtonid"
            android:layout_weight="1"
            android:onClick="logicFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="-"
            android:textSize="35dp"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/zeroButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:text="0"
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/pointButtonid"
            android:onClick="digitFunction"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="."
            android:textSize="35dp"

            />
        <Button
            android:id="@+id/resultButtonid"
            android:onClick="resultButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="="
            android:textSize="35dp"

            />

        <Button
            android:id="@+id/addButtonid"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:onClick="logicFunction"
            android:text="+"
            android:textSize="35dp"

            />


    </LinearLayout>


</LinearLayout>